<div class="container">
  <h2><%= @task.title %></h2>
  <div>
  <p>Detail:</p>
  <p><%= @task.details %></p>
  </div>
  <div>
  <p>Completed:</p>
  <p><%= @task.completed %></p>
  </div>
  <%= link_to 'Go back to list', tasks_path, class: "btn btn-primary" %>
  <%= link_to 'edit', edit_path(@task), class: "btn btn-secondary" %>
  <%= link_to "Delete #{@task.title}", task_path(@task),class: "btn btn-success", method: :delete, data: { confirm: "Are you sure?" } %>
</div>
